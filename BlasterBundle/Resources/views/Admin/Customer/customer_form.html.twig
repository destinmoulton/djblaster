{% extends "DJBlasterBundle:Admin:_admin_base.html.twig" %}


{% block content %}
{% form_theme form 'DJBlasterBundle:Admin:_admin_form_errors.html.twig' %}
{{ form_start(form, {'attr':{'novalidate':'novalidate','class':'form-horizontal'}}) }}
<fieldset>
    <legend>
        {% if customer.id == 0 %}Add{% else %}Edit{% endif %} Customer
    </legend>
    {{ form_errors(form) }}
    <div class="form-group {% if form.name.vars.errors|length %}has-error{% endif %}" >
        {{ form_label(form.name , label|default(null),  {'label_attr':{'class':'control-label col-sm-2'}}) }}
        <div class="col-sm-5">
            {{ form_widget(form.name, {'attr':{'class':'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>
    </div>

    <div class="form-group {% if form.info.vars.errors|length %}has-error{% endif %}" >
        {{ form_label(form.info , label|default(null),  {'label_attr':{'class':'control-label col-sm-2'}}) }}
        <div class="col-sm-5">
            {{ form_widget(form.info, {'attr':{'rows':'3', 'class':'form-control'}}) }}
            {{ form_errors(form.info) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-5">
            <button class="btn btn-default">
                Save
            </button>
        </div>
    </div>

    {{ form_end(form) }}
</fieldset>
{% endblock %}
