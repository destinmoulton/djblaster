{% extends "DJBlasterBundle::djblaster_base.html.twig" %}

{% block title %}
Admin Login
{% endblock %}
{% block brandtitle %}
Admin
{% endblock %}
{% block navbar %}
<li class="active">
    <a href="#">Login</a>
</li>
{% endblock %}
{% block content %}
<h3></h3>
{% if error %}
<div class="alert alert-danger" role="alert">
    {{ error }}
</div>
{% endif %}

{{ form_start(form, {'attr':{'novalidate':'novalidate','class':'form-horizontal'}}) }}
<fieldset>
    <legend>
        Reset Password
    </legend>
    {{ form_errors(form) }}
    <div class='form-group'>
        <label for="email" class="control-label col-sm-2">Email Address:</label>
        <div class="col-sm-5">
            {{ form_widget(form.email, {'attr':{'class':'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-5">
            <button class='btn btn-default' role='submit'>
                Reset Password
            </button>
            <a href="{{ path('dj_blaster_admin_login') }}">Return to Login page.</a>
        </div>
    </div>
    {{ form_end(form) }}
    
</fieldset>

{% endblock %}

