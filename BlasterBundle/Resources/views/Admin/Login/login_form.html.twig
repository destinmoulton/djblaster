{% extends "DJBlasterBundle::djblaster_base.html.twig" %}

{% block title %}
Admin Login
{% endblock %}
{% block brandtitle %}
Admin
{% endblock %}
{% block navbar %}
<li class="active">
    <a href="#">Login</a>
</li>
{% endblock %}
{% block content %}
<h3>Administrator Login</h3>
{% if error %}
<div class="alert alert-danger" role="alert">
    {{ error.messageKey|trans(error.messageData) }}
</div>
{% endif %}
{% for notice in notices %}
<div class='alert alert-success alert-dismissable' role='alert'>
    <button type="button"
    class="close"
    data-dismiss="alert"
    aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    {{ notice }}
</div>
{% endfor %}

<form action="{{ path('dj_blaster_admin_login_check') }}" method="post" class="form-horizontal">
    <div class='form-group'>
        <label class="col-sm-2" for="email">Email:</label>
        <div class="col-sm-5">
            <input type="text"
            id="email"
            name="_email"
            class="form-control"
            value="{{ last_email }}" />
        </div>
    </div>
    <div class='form-group'>
        <label class="col-sm-2" for="password">Password:</label>
        <div class="col-sm-5">
            <input type="password"
            id="password"
            name="_password"
            class="form-control"/>
        </div>
    </div>
    <input type="hidden" name="_target_path" value="dj_blaster_admin_home" />

    <button type="submit">
        Login
    </button>
</form>
<a href="{{ path('dj_blaster_admin_login_reset') }}">Help! I forgot my password.</a>
{% endblock %}

