{% extends "DJBlasterBundle:Admin:_admin_base.html.twig" %}

{% block content %}
{% for notice in notices %}
<div class='alert alert-success alert-dismissable' role='alert'>
    <button type="button"
    class="close"
    data-dismiss="alert"
    aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    {{ notice }}
</div>
{% endfor %}
<div class="col-md-9">
    <div class="panel panel-success">
        <!-- Default panel contents -->
        <div class="panel-heading">
            Notifications
        </div>
        <div class="panel-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Edit</th>
                </thead>
                <tbody>

                    {% for notification in notifications %}

                    <tr>
                        <td>{{ notification.getTitle() }}</td>
                        <td>{{ notification.getStartDate()|date('M j, Y')}}</td>
                        <td>{{ notification.getEndDate()|date('M j, Y')}}</td>
                        <td><a href="{{ path('dj_blaster_admin_djnotification_edit', {'notification_id':notification.getNotificationId()}) }}">Edit</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script src="{{ asset('js/bootbox.min.js') }}"></script>
{% endblock %}
